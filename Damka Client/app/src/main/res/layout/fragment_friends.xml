<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_background"
    android:orientation="vertical"
    tools:context=".FriendsFragment">

    <EditText
        android:id="@+id/search_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:hint="Search User by ID"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:imeOptions="actionSearch"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/add_user_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/friends_requests_title_view"/>

    <Button
        android:id="@+id/add_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/search_users"
        android:text="ADD"
        app:layout_constraintBottom_toTopOf="@+id/friends_requests_title_view"
        app:layout_constraintEnd_toStartOf="@+id/refresh_user_button"
        app:layout_constraintStart_toEndOf="@id/search_users"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refresh_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/search_users"
        android:text="REFRESH"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/friends_requests_title_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_user_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friends_requests_title_view"
        android:background="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend Requests"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/search_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/friends_requests_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/friends_requests_title_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/friends_title_view"
        android:background="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/friends_requests_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/friends_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friends_title_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
